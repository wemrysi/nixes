# Script to configure X, start common apps, and start xmonad.

# Configure X
xsetroot -cursor_name left_ptr &
xrdb -merge ~/.Xresources &

# Start the system tray
stalonetray &

# Start volume control
pasystray &

# Start dropbox
dropbox start &

# Start bluetooth manager
blueman-applet &

# Start wicd-client
#wicd-client -t &

# Start two terminals
urxvt -e mutt &

# Start Pidgin
pidgin &

# Start a browser
firefox &

# Start screensaver
xscreensaver -no-splash &
